        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity
            android:name=".activity.SplashScreenActivity"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppThemeNoActionBar" />
        <activity android:name=".activity.baru.TerimaActivity" />
        <activity android:name=".activity.baru.ProsesActivity" />
        <activity android:name=".activity.baru.KirimActivity" />
        <activity android:name=".activity.revisi.TerimaActivity" />
        <activity android:name=".activity.revisi.ProsesActivity" />
        <activity android:name=".activity.revisi.KirimActivity" />
        <activity android:name=".activity.baru.FormRealisasiActivity" />
        <activity android:name=".activity.baru.FormRealisasiProsesActivity" />
        <activity android:name=".activity.baru.BarudataPelActivity" />
        <activity android:name=".activity.revisi.RevdataPelActivity" />
        <activity android:name=".activity.revisi.FormRealRevActivity" />
        <activity android:name=".activity.revisi.FormRealProsesRevActivity" />
        <activity android:name=".activity.baru.BarudataPelProsesActivity" />
        <activity android:name=".activity.baru.FormRealisasiKirimActivity"></activity>
    </application>

</manifest>