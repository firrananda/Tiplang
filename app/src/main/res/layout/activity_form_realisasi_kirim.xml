<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.baru.FormRealisasiKirimActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cardbatd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Berita Acara Tutup Dinas"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="No BATD"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_batd"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical|fill_vertical"
                        android:hint="no BATD"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal BA"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_tgl_ba"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center_vertical|fill_vertical"
                        android:hint="Tanggal BATD"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardrealisasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardbatd"
                android:elevation="10dp"
                android:paddingTop="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Data Realisasi"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Hasil Realissi"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_hasil_realisasi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Hasil Realisasi"
                        android:gravity="center_vertical"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardcatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardrealisasi"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Catatan dan Pelanggaran"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="Pelanggaran"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_pelanggaran"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Pelanggaran"
                        android:gravity="center_vertical"
                       />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kondisi Stan Meter"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_kondisi"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Kondisi Stan Meter"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Catatan"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_catatan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:hint="Catatan"
                        android:gravity="center_vertical"/>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardtambahan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardcatatan"
                android:elevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Angkat"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_tgl_angkat"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Tanggal Angkat"
                        android:gravity="center_vertical"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="No Meter"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_no_meter"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="No Meter"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ukuran Meter"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_ukuran_meter"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Ukuran Meter"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Angka Angkat"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_angka_angkat"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Angka Angkat"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Merk Meteran"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_merk_meteran"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:hint="Merk Meter"
                        android:gravity="center_vertical"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto kondisi 1"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/iv_fotohasil1"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        />
                    <!--<Button-->
                        <!--android:id="@+id/btn_foto1"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_horizontal"-->
                        <!--android:text="Camera 1"-->
                        <!--android:drawableLeft="@drawable/ic_camera" />-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto kondisi 2"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/iv_fotohasil2"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        />
                    <!--<Button-->
                        <!--android:id="@+id/btn_foto2"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_horizontal"-->
                        <!--android:text="Camera 2"-->
                        <!--android:drawableLeft="@drawable/ic_camera" />-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto kondisi 3"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/iv_fotohasil3"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        />
                    <!--<Button-->
                        <!--android:id="@+id/btn_foto3"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_horizontal"-->
                        <!--android:text="Camera 3"-->
                        <!--android:drawableLeft="@drawable/ic_camera" />-->

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Foto kondisi 4"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/iv_fotohasil4"
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="5dp"
                        />
                    <!--<Button-->
                        <!--android:id="@+id/btn_foto4"-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center_horizontal"-->
                        <!--android:text="Camera 4"-->
                        <!--android:drawableLeft="@drawable/ic_camera" />-->

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>